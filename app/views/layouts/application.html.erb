<!DOCTYPE html>
<html>
<head>
	<title>WIXOSSカードデータベース</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body data-spy="scroll" data-target=".nav-search">
	<header>
		<%= render 'layouts/header' %>
	</header>

	<% unless @sq.nil? %>
		<div class="col-sm-2">
			<%= render 'cards/search_form' %>
		</div>
	<% end %>

	<% unless @cards.nil? %>
		<div class="col-sm-3">
			<%= render 'layouts/spy' %>
		</div>
	<% end %>

	<div class="col-sm-7">
		<%= yield %>
	</div>

	<%= debug(params) if Rails.env.development? %>
</body>
</html>
